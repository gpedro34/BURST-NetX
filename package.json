{
  "name": "burst-netx",
  "version": "0.1.0",
  "description": "Network Explorer API and front-end",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gpedro34/BURST-NetX.git"
  },
  "keywords": [
    "burst",
    "brs",
    "network",
    "crawler"
  ],
  "scripts": {
    "setup": "npm install && cd client && npm install && cd ..",
    "clean-setup": "bash ./clean-setup.sh",
    "server": "node server/server.js",
    "dev-client": "npm start --prefix client",
    "build-client": "echo Hope you didn't forgot to set process.env before running this && echo or your API calls will be done to watchdog.burst-alliance.org API and not a specified domain && echo If react builder fails in CSS and JS files keep trying... && rm -rf fe-build && cd client/src && rm -rf build && npm run build && mv ./../build ./../../fe-build",
    "prod-client": "npm install -g serve && serve -s build",
    "prod-bundle": "concurrently \"node server/server.js\" \" serve -s fe-build -l 3000\"",
    "dev-bundle": "node launcher.js"
  },
  "author": "gpedro",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "exit": "^0.1.2",
    "express": "^4.16.4",
    "fs": "0.0.1-security",
    "iplocation": "^6.1.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.4",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "ssl-checker": "^1.2.1"
  }
}
